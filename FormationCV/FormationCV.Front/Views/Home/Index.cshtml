@model FormationCV.Front.ViewModels.CVVM

@{
    ViewData["Title"] = "Home Page";
}

<header>
    <h1 id="nom">@Model.Nom @Model.Prenom</h1>
    <h2 id="titre">@Model.Titre</h2>
</header>

<main>
    <aside class="informations-complementaires">
        <section class="section">
            <h1 class="gros-titre">Compétences</h1>
            <ul class="competences">
                @foreach (var competence in Model.Competences)
                {
                    <li class="skill-item">@competence.Label</li>
                }
            </ul>
        </section>

        <section class="section">
            <h1 class="gros-titre">Formations</h1>
            <ul>
                @foreach (var formation in Model.Formations)
                {
                    <li class="formation">
                        <p>@formation.DateDebut.ToString("yyyy") - @formation.DateFin.ToString("yyyy")</p>
                        <p>@formation.Diplome @formation.Intitule </p>
                        @if(formation.Description != null) {
                            <p>@formation.Description</p>
                        }
                        <p>@formation.Ecole</p>
                    </li>
                }
            </ul>
        </section>

        <section class="section">
            <h1 class="gros-titre">Informations</h1>

            <div>
                <address>
                    @Model.NumeroDeRue @Model.Rue <br />
                    @Model.Commune @Model.CodePostal <br />
                    <a href="tel:06 62 31 81 71">06 62 31 81 71</a> <br />
                    <a href="mailto:myriam.abdelfattah@gmail.com">myriam.abdelfattah@gmail.com</a>
                </address>
                @if (Model.Permis)
                {
                    <text>Permis B</text>
                }
            </div>
        </section>
    </aside>

    <article id="experience">
        <h1 class="gros-titre">Expérience</h1>

        @foreach (var experience in Model.Experiences)
        {
            <section class="section">
                <h2 class="moyen-titre">@experience.Entreprise</h2>
                
                <section>Nouvelle section</section>

                <div>
                    <p class="sub-titre">@experience.DateDebut.ToString("MMMM yyyy") @experience.DateFin?.ToString("- MMMM yyyy")</p>
                    <p class="petit-titre">@experience.Poste</p>
                    <p>@experience.Description</p>
                </div>
            </section>
        }
    </article>
</main>